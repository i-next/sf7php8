    <a href="{{ path('app_my_seeds_new') }}"><i class="bi bi-plus-circle button_action"></i> {{ 'form.title.strain.new'|trans }}</a>
    <table class="table datatables bg-transparent"  data-url="{{ path('app_my_seeds_ajax') }}" data-noimg="{{ asset('img/no-img.png') }}">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>{{ 'myseeds.index.table.head.name'|trans }}</th>
                <th>{{ 'myseeds.index.table.head.seeder'|trans }}</th>
                <th>{{ 'myseeds.index.table.head.quantity'|trans }}</th>
                <th>{{ 'myseeds.index.table.head.duration'|trans }}</th>
                <th>{{ 'myseeds.index.table.head.auto'|trans }}</th>
